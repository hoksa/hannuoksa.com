{
  "name": "hannuoksa.com",
  "version": "1.0.0",
  "private": true,
  "description": "hannuoksa.com",
  "author": "Hannu Oksa",
  "scripts": {
    "tailwind:build": "npx tailwindcss -i src/css/global.css -o dist/css/styles.css --minify",
    "tailwind:watch": "npx tailwindcss -i ./src/css/global.css -o ./dist/css/styles.css --watch",
    "webpack:build": "npx webpack --mode=production",
    "webpack:watch": "npx webpack --watch --mode=development",
    "start": "concurrently -p \"[{name}]\" -n \"WEBPACK,11TY,TAILWIND\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run webpack:watch\" \"npx @11ty/eleventy --serve\" \"npm run tailwind:watch\"",
    "build": "concurrently -p \"[{name}]\" -n \"WEBPACK,11TY,TAILWIND\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run webpack:build\" \"npx @11ty/eleventy \" \"npm run tailwind:build\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-webpack-plugin": "^3.1.1",
    "postcss": "^8.4.13",
    "prettier": "2.5.1",
    "tailwindcss": "^3.0.24",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "animejs": "^3.2.1"
  }
}
